<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		x:Class="GiggleGaggleApp.EventPageDetail">
	<ContentPage.Content>
		<StackLayout x:Name="DetailLayout" Spacing="20" Padding="10,20,10,0">
			<Label Text="{Binding Title}" FontSize="Large" />
			<DatePicker x:Name="EventDate" Date="{Binding Date}" Format="ddd/MM"/>
			<TimePicker Time="{Binding Time}" />
			<Label Text="{Binding MeetingLocation, StringFormat='Meet Up Spot {0}'}" />
			<Picker x:Name="RideTypePicker"/>
			<Picker x:Name="ElevationPicker"/>
			<Label Text="{Binding Description}" />
			<Button Text="Save" Clicked="OnSave"/>
			<Button Text="Cancel" Clicked="OnCancel"/>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
